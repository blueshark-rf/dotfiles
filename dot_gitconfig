[delta]
    navigate = true               # Allow ← / → line navigation
    line-numbers = true
    side-by-side = true
    syntax-theme = OneHalfDark    # Clean green-on-black scheme
    plus-style = "syntax #00e0d1" # Teal cyan for additions (matches your CT)
    minus-style = "syntax #c71800" # Deep red for removals
    whitespace-error-style = "reverse"
    diff-so-fancy = true

[merge]
	tool = diff-so-fancy

[interactive]
